# === General App Config ===
APP_NAME=Identik
APP_TAGLINE="Trusted identity for trusted media."
APP_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# === Assets ===
LOGO_LIGHT_PATH=public/logo.svg
LOGO_DARK_PATH=public/logo-dark.svg
FAVICON_PATH=public/identik-icon.svg

# === Supabase / Database ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=anon-key
DATABASE_URL=postgresql://postgres:password@aws-0-your-region.pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT_MS=10000

# === Auth ===
NEXTAUTH_SECRET=your-secret-string

# === Signing Keys (dev) ===
DEV_SIGNING_PRIVATE_KEY=ed25519-private-key
DEV_SIGNING_PUBLIC_KEY=ed25519-public-key

# === Feature Flags ===
EMBED_METADATA=true
ENABLE_NAME_PURCHASES=true
