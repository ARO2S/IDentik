  "workspaces": [
    "web",
    "mobile",
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev:web": "npm run dev --workspace web",
    "dev:mobile": "npm run start --workspace mobile",
    "build:web": "npm run build --workspace web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "db:migrate": "npm run db:migrate --workspace packages/database",
    "db:seed": "npm run db:seed --workspace packages/database",
    "prepare": "[ -x node_modules/.bin/husky ] && husky install || true"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
